@model IEnumerable<InstitutoEducativo.Models.Materia>

@{
    ViewData["Title"] = "MostrarMateriasSegunCarrera";
}

<h1>MostrarMateriasSegunCarrera</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoMateria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CupoMaximo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrera)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoMateria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CupoMaximo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carrera.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MateriaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MateriaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MateriaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
